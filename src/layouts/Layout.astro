---
import '@fontsource/kodchasan/400.css';
import '@fontsource/kodchasan/600.css';
import '@fontsource/kodchasan/700.css';
import 'swiper/css';
import 'swiper/css/navigation';
import 'swiper/css/pagination';
import Header from '../components/Header.tsx';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="es" class="overflow-x-hidden">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	
	<body class="relative bg-gradient-to-b from-[#0e1014] via-[#111825] to-[#132c64] min-h-screen overflow-x-hidden">
		
		<Header client:load/>
		<!-- Pseudo-elemento para estrellas -->
		<div class="pointer-events-none absolute inset-0 bg-[url('/svgs/stars.svg')] bg-repeat bg-[length:200px_200px] opacity-20 z-0"></div>

		<div class="pointer-events-none absolute inset-0 bg-[url('/svgs/stars-2.svg')] bg-repeat bg-[length:250px_250px] opacity-50 z-0"></div>	  						
		
		<slot />
	</body>

	
</html>

<style is:global>
	:root {
		color-scheme: light;
	}

	html {
		font-family: 'Kodchasan', system-ui, sans-serif;
		scroll-behavior: smooth;
	}

	h1 {
		font-family: 'Kodchasan', sans-serif;
		font-weight: 700;
	}
	
	h2 {
		font-family: 'Kodchasan', sans-serif;
		font-weight: 600;
	}

	body {	
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	@media {prefers-reduced-motion: reduce} {
		html {
			scroll-behavior: smooth;
		}
	}

</style>
