---
const { class: className, id, bgClass } = Astro.props
---

<section
  id={id}
  class={`w-full ${bgClass ?? ""}`}
>
  <div
    class={`w-full mx-auto 
      max-w-full sm:max-w-[95%] md:max-w-2xl lg:max-w-6xl 
      px-6 sm:px-6 md:px-8 lg:px-10 xl:px-12
      ${className}`}
  >
    <slot />
  </div>
</section>

